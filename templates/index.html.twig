{% extends "base.html.twig" %}

{% block body %}
    <h1>Bienvenue !</h1>
    <div>
        <a href="{{ path('wild_show', { 'slug': "walking-dead" }) }}">
            Testing show() method from WildController with a real program s slug.
        </a>
    </div>
    <div>
        <a href="{{ path('wild_programs') }}">
            Testing index() method from WildController to view all programs.
        </a>
    </div>
    <div>
        <a href="{{ path('category') }}">
            Créer une catégorie
        </a>
    </div>
        {{ dump(episodes) }}

    {% for episode in episodes %}
    <div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      {# <img src="{{episode.poster}}" class="card-img" alt="..."> #}
    </div>
    <div class="col-md-8">
      <div class="card-body">
        {# <h5 class="card-title">{{episode.name}}</h5> #}
        <p class="card-text">{{episode.title}}</p>
        <p class="card-text"><small class="text-muted">{{ episode.beginAt|format_datetime('full', 'short', locale='fr') | capitalize}}</small></p>
      </div>
    </div>
  </div>
</div>
{% endfor %}

{% endblock %}
