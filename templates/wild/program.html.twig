{% extends 'base.html.twig' %}

{% block title %}
    {{ program.slug }}
{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.name }} poster">
            <div class="media-body">
                <h1 class="mt-0">{{ program.name|capitalize }}</h1>
                <p>{{ program.summary }}</p>
                <p><strong>Catégorie</strong>
                    <span class="badge badge-secondary" style="background: {{ program.category.color }}">
                        {{ program.category.name }}</span>
                </p>

                <div class="row">
                    <div class="col-6">
                        <strong>Saisons :</strong>
                        {% if seasons is empty %}
                            <h3>Pas de saisons disponibles</h3>
                        {% endif %}
                        {% for season in seasons %}
                            <div>
                                <a href="{{ path('wild_season', { 'id': season.id }) }}">Saison
                                    {{ season.number }}</a>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="col-6">
                        <strong>Acteurs :</strong>
                        {% for actor in program.actors %}
                            <div>
                                <a href="{{ path('wild_show_actor', { 'slug': actor.slug }) }}">{{ actor.name }}
                                </a>
                            </div>
                        {% else %}
                            <div>Aucun acteur pour cette série</div>
                        {% endfor %}
                    </div>
                </div>

                <a href="{{ path('wild_programs') }}" class="btn btn-info">
                    Retour à l'accueil
                </a>
            </div>
    </div>
{% endblock %}